<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/un"
        android:layout_marginTop="20dp"
        android:text="User Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/uni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/un"
        android:layout_alignBottom="@+id/un"
        android:ems="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwd"
        android:layout_below="@+id/un"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwdi"
        android:layout_toRightOf="@+id/pwd"
        android:layout_alignBottom="@+id/pwd"
        android:ems="10"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adr"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Address"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adri"
        android:layout_toEndOf="@+id/adr"
        android:layout_alignBottom="@+id/adr"
        android:ems="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g"
        android:text="Gender"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/adr"
        android:textSize="20sp"/>
    <RadioGroup
        android:layout_marginTop="20dp"
        android:layout_below="@+id/adr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gr"
        android:layout_alignBottom="@+id/g"
        android:layout_toRightOf="@+id/g"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb1"
            android:text="Male"
            android:textSize="20sp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb2"
            android:text="Female"
            android:textSize="20sp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dob"
        android:layout_below="@+id/g"
        android:layout_marginTop="20dp"
        android:text="Date of Birth"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dobi"
        android:inputType="date"
        android:ems="10"
        android:layout_alignBottom="@+id/dob"
        android:layout_toEndOf="@+id/dob"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_below="@+id/dob"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Age"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agei"
        android:layout_alignBottom="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:ems="10"
        android:inputType="number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/st"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/age"
        android:text="State"
        android:textSize="20sp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignBottom="@+id/st"
        android:layout_toEndOf="@+id/st"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@+id/st"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Submit"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true" />
</RelativeLayout>